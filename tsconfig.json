{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "./dist",
    "target": "esnext",                          
    "module": "commonjs",                     
    "lib": ["ESNext", "DOM"],                             
    "allowJs": true,                       
    "declaration": true,                   
    "declarationMap": true,                
    "sourceMap": true,                     
    "removeComments": true,                
    "strict": true,                           
    "esModuleInterop": true,                  
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src"
  ]
}
